{% extends 'base.html.twig' %}
{% block title %}Votre Fiche détaillée chez FITNESS Club
{% endblock %}
{% block body %}
	<section
		class="container my-3">
		{# CONDITION SI L UTILISATEUR EST ACTIF OU NON #}
		{% if is_granted('ROLE_STRUCTURE') %}
			{% for structure in structures %}
				{% if structure.email == app.user.email %}
					<a class="nav-link" href="{{ path('app_welcomePage')}}">
						<i class="fas fa-arrow-left fa-2x" id="arrow_icon"></i>
					</a>
					<div class="container-fluid d-flex flex-wrap justify-content-center">
						<div class="card bg-light border-secondary m-3" style="width: 56rem; height: auto;" id="card_presentationStructures">
							<div class="card-body m-1">
								<div class="container m-4 ">
									<h5 class="justify-content-center mt-5" id="title_details">Structure n°
										{{ structure.id }}</h5>

									<div class="container-fluid d-flex flex-wrap justify-content-end" id="affiliate">
										<p class="card-text">Affiliée au Partenaire n°{{ structure.partners.id }}</p>
									</div>

									<h5 class="justify-content-center" id="title_details">{{ structure.storeName }}</h5>
									{% if structure.active == 1 %}
										<div class="container">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked disabled>
												<label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Actif</label>
											</div>
										{% else %}
											<div class="container">
												<div class="form-check form-switch">
													<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
													<label class="form-check-label" for="flexSwitchCheckDisabled">Inactif</label>
												</div>
											</div>
										</div>

									{% endif %}
									<h5 class="card-title ms-3">
										<i class="far fa-address-card ms-2 me-2" id="comment_icon"></i>
										{{ structure.adress }}</h5>
									<h5 class="card-title ms-3">
										{{ structure.country }}</h5>
									<h5 class="card-title ms-3">
										<i class="fas fa-mobile-alt ms-2 me-2" id="mobile_icon"></i>
										{{ structure.phone }}</h5>
									<h5 class="card-title ms-3">
										<i class="fas fa-at ms-2 me-2" id="at_icon"></i>
										{{ structure.email }}</h5>
								</div>
							</div>
						</div>
					</div>
					<div class="container-fluid d-flex flex-wrap justify-content-center">
						<div class="card bg-light border-secondary" style="width: 56rem; height: auto;" id="card_presentationStructures">
							<div class="card-body">

								<div class="container m-1">
									{% if structure.newsletter == 1 %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked disabled>
												<label class="form-check-label" for="flexSwitchCheckCheckedDisabled">
													<p class="card-text">newsletter</p>
												</label>
											</div>
										</div>
									{% else %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
												<label class="form-check-label" for="flexSwitchCheckDisabled">
													<p class="card-text">newsletter</p>
												</label>
											</div>
										</div>
									{% endif %}
								</div>

								<div class="container m-1">
									{% if structure.promote == 1 %}
										<div class="container ms-4">

											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked disabled>
												<label class="form-check-label" for="flexSwitchCheckCheckedDisabled">
													<p class="card-text">promote</p>
												</label>
											</div>
										</div>
									{% else %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
												<label class="form-check-label" for="flexSwitchCheckDisabled">
													<p class="card-text">promote</p>
												</label>
											</div>
										</div>
									{% endif %}
								</div>

								<div class="container m-1">
									{% if structure.planning == 1 %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked disabled>
												<label class="form-check-label" for="flexSwitchCheckCheckedDisabled">
													<p class="card-text">planning</p>
												</label>
											</div>
										</div>
									{% else %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
												<label class="form-check-label" for="flexSwitchCheckDisabled">
													<p class="card-text">planning</p>
												</label>
											</div>
										</div>
									{% endif %}
								</div>

								<div class="container m-1">
									{% if structure.statistics == 1 %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked disabled>
												<label class="form-check-label" for="flexSwitchCheckCheckedDisabled">
													<p class="card-text">statistics</p>
												</label>
											</div>
										</div>
									{% else %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
												<label class="form-check-label" for="flexSwitchCheckDisabled">
													<p class="card-text">statistics</p>
												</label>
											</div>
										</div>
									{% endif %}
								</div>

								<div class="container m-1">
									{% if structure.products == 1 %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked disabled>
												<label class="form-check-label" for="flexSwitchCheckCheckedDisabled">
													<p class="card-text">products</p>
												</label>
											</div>
										</div>
									{% else %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
												<label class="form-check-label" for="flexSwitchCheckDisabled">
													<p class="card-text">products</p>
												</label>
											</div>
										</div>
									{% endif %}
								</div>

								<div class="container m-1">
									{% if structure.digicode == 1 %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked disabled>
												<label class="form-check-label" for="flexSwitchCheckCheckedDisabled">
													<p class="card-text">digicode</p>
												</label>
											</div>
										</div>
									{% else %}
										<div class="container ms-4">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
												<label class="form-check-label" for="flexSwitchCheckDisabled">
													<p class="card-text">digicode</p>
												</label>
											</div>
										</div>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>

			{% endif %}
		{% endfor %}
	{% endif %}
</section>{% endblock %}
