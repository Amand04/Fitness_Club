{% extends 'base.html.twig' %}

{% block title %}Fitness-Club
{% endblock %}

{% block body %}
	{# MESSAGE ERREURS IDENTIFICATION #}
	<div class="container-fluid d-flex flex-wrap justify-content-center mt-2">
		<div class="col-8">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté en tant que
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Déconnexion</a>
				</div>
			{% else %}
				{#FORMULAIRE DE CONNEXION #}
				<div class="container-fluid d-flex flex-wrap justify-content-center " id="div_logo">
					<img src="logoFITNESS2.png" alt="image of fitness-club logo" class="logo m-5">
					<div class="col-12">
						<form method="post">
							<div class="form-group">
								<label for="inputEmail">Email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
							</div>
							<div class="form-group">
								<label for="inputPassword">Mot de passe</label>
								<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
							</div>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<button class="btn btn mt-4" id="btn_login" type="submit">Se connecter</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}
