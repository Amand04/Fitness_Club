{% extends 'base.html.twig' %}
{% block title %}Créer un compte Utilisateur
{% endblock %}
{% block body %}
	<div class="container-fluid d-flex flex-wrap justify-content-center mt-2">
		<div class="col-8">
			<h3 class="justify-content-center mt-4" id="title_category">Créer un compte</h3>
			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.lastname) }}
			{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
			{{ form_row(registrationForm.agreeTerms) }}
			<button type="submit" class="btn btn" id="btn_login">Enregistrer</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
