{% extends 'base.html.twig' %}
{% block title %}Nouveau mot de passe
{% endblock %}
{% block body %}
	<div class="container-fluid d-flex flex-wrap justify-content-center mt-2">
		<div class="col-10">
			<div class="container-fluid d-flex flex-wrap justify-content-center " id="div_logo">
				<img src="logoFITNESS2.png" alt="image of fitness-club logo" class="logo m-5">
				<div class="col-12">
					<h3 class="justify-content-center mt-5" id="title_category">Entrez votre nouveau mot de passe</h3>
					<form method="post">
						<div class="form-group">
							<input type="password" name="password" id="pass">
							<input type="hidden" name="token" value="{{ token }}">
						</div>
						<button type="submit" class="btn btn" id="btn_login">Valider</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
