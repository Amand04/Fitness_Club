{% extends 'base.html.twig' %}
{% block title %}Les Permissions
{% endblock %}
{% block body %}
	<section class="container my-3" id="update_font">
		<div class="row">
			<div class="col">
				<h3 class=" justify-content-center mt-5" id="title_category">
					Modifier la Permission
					{{ permission.perms }}
					pour le Partenaire
					{{permission.partners.id }}</h3>
				<fieldset>
					{{ form_start(form) }}
					{{form_widget(form)}}
				</fieldset>

			</div>
		</div><!-- Button trigger modal --><button type="button" class="btn btn-primary" id="modalButton" data-toggle="modal" data-target="#exampleModalCenter">
