{% extends 'base.html.twig' %}
{% block title %}Détails de la Structure
	{{ structure.id }}
{% endblock %}
{% block body %}

	<div class="container-fluid d-flex flex-wrap justify-content-center mt-3">
		<div
			class="card bg-light border-secondary" style="width: 30rem; height: auto;" id="card_presentationStructures">
			{# FENETRE ALERT EN CAS DE SUPPRESSION AVEC LIEN DE CONFIRMATION #}
			<div class="alert alert-danger alert-dismissible fade show " role="alert" id="alert" style="display: none;">Etes-vous sur de vouloir supprimer cette structure?
				<a href="{{path('app_deleteStructures', {id: structure.id})}}" class="alert-link" id="alert">
					Oui<i class="far fa-check-circle m-2 fa-2x" id="confirm_icon"></i>
				</a>
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">x</span>
				</button>
			</div>

			<div class="card-body m-1" id="card">
				<div class="container">
					<h5 class="justify-content-center mt-3" id="title_category">
						<a class="nav-link" href="{{ path('app_adminStructuresIndex')}}">
							<i class="fas fa-arrow-left fa-1x" id="arrow_iconReturn"></i>
						</a>Structure n°
						{{ structure.id }}</h5>
					<h5 class="justify-content-center mt-5" id="title_category">
						{{ structure.storeName }}</h5>
				</div>

				<div class="container-fluid d-flex flex-wrap justify-content-end" id="affiliate">
					<p class="card-text">Affiliée au Partenaire n°{{ structure.partners.id }}</p>
				</div>

				<div class="container m-1">
					{% if structure.active == 1 %}
						<div class="container m-2 ">
							<div class="form-check form-switch">
								<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked disabled>
								<label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Actif</label>
							</div>
						{% else %}

							<div class="container m-2">
								<div class="form-check form-switch">
									<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
									<label class="form-check-label" for="flexSwitchCheckDisabled">Inactif</p>
								</label>
							</div>
						</div>
					</div>
				{% endif %}
			</div>
			<h5 class="card-title ms-3">
				<i class="far fa-address-card me-2" id="comment_icon"></i>
				{{ structure.adress }}</h5>
			<h5 class="card-title ms-5">
				{{ structure.country }}</h5>
			<h5 class="card-title ms-3">
				<i class="fas fa-mobile-alt me-2" id="mobile_icon"></i>
				{{ structure.phone }}</h5>
			<h5 class="card-title ms-3">
				<i class="fas fa-at me-2" id="at_icon"></i>
				{{ structure.email }}</h5>
			{% if is_granted('ROLE_ADMIN')  %}
				<div class="container-fluid d-flex flex-wrap justify-content-end">
					<a href="{{path('app_updateStructures', {id: structure.id})}}">
						<i class="fas fa-edit m-3 fa-1x" id="update_icon"></i>
					</a>
					<button type="button" class="btn btn-danger" id="warning">
						<i class="fas fa-trash fa-1x" id="delete_icon"></i>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
