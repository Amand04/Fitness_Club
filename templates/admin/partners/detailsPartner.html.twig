					<th scope="col">permission_planning</th>
					<th scope="col">permission_promote</th>
					<th scope="col">permission_products</th>
					<th scope="col">permission_statistics</th>
					<th scope="col">permission_evenements</th>
					<th scope="col">permission_digicode</th>
				</tr>
			</thead>
			<tr>
				<th scope="row">{{ partner.id }}
				</th>
				<td>{{ partner.storeName }}</td>
				<td>{{ partner.lastname }}</td>
				<td>{{ partner.firstname }}</td>
				<td>{{ partner.email }}</td>
