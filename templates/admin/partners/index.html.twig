{% extends 'base.html.twig' %}
{% block title %}Les Partenaires
{% endblock %}
{% block body %}
	<div class="container md-2">
		<h3 class="justify-content-center mt-5" id="title_category">Les Partenaires
			{% if is_granted('ROLE_ADMIN')  %}
				<a href="{{path('app_registerPartner')}}">
					<i class="fas fa-plus-circle m-3" id="btn_plus"></i>
				</a>

			{% endif %}
		</h3>
	</div>
	<div class="text" id="container_table">
		<table class="table table-striped table-hover table-bordered" id="myTable">
			<thead>
				<tr class="line_table">
					<th scope="col" class="btn_table">Nom</th>
					<th scope="col" class="btn_table">Actif</th>
					<th scope="col" class="btn_table">Identifiant utilisateur</th>
					<th scope="col" class="btn_table">DÃ©tails</th>
				</tr>
			</thead>
			<tbody id="myTable">
				{% for partner in partners %}
					<tr>
						<th scope="row">{{ partner.name }}</th>
						<td>
							{% if partner.active == 1 %}
								<p>1</p>
							{% else %}
								<p>0</p>
							{% endif %}
						</td>
						<td>
							{{ partner.user.id}}
						</td>
						<td>
							<a href="{{path('app_detailsPartner', {id: partner.id})}}">
								<i class="fas fa-eye m-2" id="eye_icon"></i>
							</a>
						</td>
					{% endfor %}
				</tr>
			</tbody>
		</tbody>
	</table>
</div>
<script>

	$(document).ready(function () {
$('#myTable').DataTable();
});
</script>{% endblock %}
