{% extends 'base.html.twig' %}
{% block title %}Les Partenaires
{% endblock %}
{% block body %}
	<div class="container-fluid justify-content-center">
		<h3 class="justify-content-center mt-5" id="title_category">Les Partenaires
			{% if is_granted('ROLE_ADMIN')  %}
				<a href="{{path('app_registerPartner')}}">
					<i class="fas fa-plus m-3" id="partner_plus"></i>
				</a>
			{% endif %}
		</h3>
	</div>
	<div class="container-fluid d-flex flex-wrap justify-content-center">
		{% for partner in partners %}
			<div class="card-group">

				<div class="card m-3" style="width: 36rem;" id="card_presentation">
					<img class="card-img-top" src="" alt="Card image cap">
					<div class="card-body m-1">
						<h5 class="card-title">{{ partner.storeName }}</h5>
						<a href="{{path('app_updatePartner', {id: partner.id})}}">
							<i class="fas fa-edit" id="update_icon"></i>
						</a>
						<a href="{{path('app_deletePartner', {id: partner.id})}}">
							<i class="fas fa-trash" id="delete_icon"></i>
						</a>
						<p class="card-text">{{ partner.description }}</p>
					</div>


					<ul class="list-group list-group-flush">

						<li class="list-group-item">{{ partner.email }}</li>
						<li class="list-group-item">{{ partner.country }}</li>
						<li class="list-group-item">{{ partner.phone }}</li>
						<a href="{{path('app_detailsPartner', {id: partner.id})}}">
							<i class="fas fa-eye" id="eye_icon"></i>
						</a>
					</ul>

				</div>
			</div>

		{% endfor %}
	</div>
{% endblock %}
