{% extends 'base.html.twig' %}
{% block title %}Les Partenaires
{% endblock %}
{% block body %}
	<div class="container md-3">
		<h3 class="justify-content-center mt-5" id="title_category">Les Partenaires
			{% if is_granted('ROLE_ADMIN')  %}
				<a href="{{path('app_registerPartner')}}">
					<i class="fas fa-plus m-3" id="btn_plus"></i>
				</a>
			{% endif %}
		</h3>
	</div>
	<div class="container">
		<button class="btn btn-primary btn-lg m-2" id="actif" type="submit" value="1" placeholder="Search..">Actif</button>
		<button class="btn btn-primary btn-lg m-2" id="inactif" type="submit" value="0" placeholder="Search..">Inactif</button>
	</div>
	<div class="text" id="container_table">
		<input class="form-control" id="myInput" type="text" placeholder="Chercher..">
		<table class=" sort table table-striped table-hover table-bordered" id="tablePartners">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Nom</th>
					<th scope="col">Email</th>
					<th scope="col">Actif</th>
					<th scope="col">Description</th>
					<th scope="col">Identifiant utilisateur</th>
					<th scope="col">DÃ©tails</th>
				</tr>
			</thead>
			<tbody id="myTable">
				{% for partner in partners %}
					<tr>
						<th scope="row">{{ partner.id }}</th>

						<td>{{ partner.name }}</td>
						<td>{{ partner.email }}</td>
						<td>
							{% if partner.active == 1 %}
								<p>1</p>
							{% else %}
								<p>0</p>
							{% endif %}
						</td>
						<td>{{ partner.shortDescription }}</td>
						<td>
							{{ partner.user.id}}
						</td>
						<td>
							<a href="{{path('app_detailsPartner', {id: partner.id})}}">
								<i class="fas fa-eye m-2" id="eye_icon"></i>
							</a>
						</td>
					{% endfor %}
				</tr>
			</tbody>
		</tbody>
	</table>

</div>
{{ knp_pagination_render(partners)}}
<script>
	$(document).ready(function () {
$("#myInput").on("keyup", function () {
let value = $(this).val().toLowerCase();
$("#myTable tr").filter(function () {
$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
});
});
});
</script>
<script>
	$(document).ready(function () {
$("#actif").on("click", function () {
let value = $(this).val();
$("#myTable tr").filter(function () {
$(this).toggle($(this).text().indexOf(value - 1) < 1)
});
});
});
</script>
<script>
	$(document).ready(function () {
$("#inactif").on("click", function () {
let value = $(this).val();
$("#myTable tr").filter(function () {
$(this).toggle($(this).text().indexOf(value) > 1)
});
});
});
</script>{% endblock %}
